<Server port="<%= node['artifactory']['shutdown_port'] %>" shutdown="SHUTDOWN">

    <Service name="Catalina">
        <Connector port="<%= node["artifactory"]["port"] %>"/>

  <% if node['artifactory']['use_ajp'] %>
        <Connector port="8019" protocol="AJP/1.3" 
          maxThreads="<%= node['artifactory']['ajp']['maxThreads'] %>"
          minSpareThreads="<%= node['artifactory']['ajp']['minSpareThreads'] %>"
          enableLookups="<%= node['artifactory']['ajp']['enableLookups'] %>"
          backlog="<%= node['artifactory']['ajp']['backlog'] %>"
        />
  <% else %>
        <!-- This is the optional AJP connector
        <Connector port="8019" protocol="AJP/1.3"/>
        -->
  <% end %>
        <Engine name="Catalina" defaultHost="localhost">
            <Host name="localhost" appBase="webapps"/>
        </Engine>
    </Service>
</Server>

